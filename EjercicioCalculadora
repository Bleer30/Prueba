using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;

namespace Calculadora
{
    class ejercicioCal
    {
        static void Main(string[] args)
        {
          int opcion;
          int a;
          int b;
          Console.WriteLine("Calculadora") ;
          Console.WriteLine("Ingrese una opcion:");
          Console.WriteLine("1. Sumar");
          Console.WriteLine("2. Dividir");
          Console.WriteLine("3. Multiplicar");
          Console.WriteLine("4. Restar");
          opcion = int.Parse(Console.ReadLine());
          switch(opcion){
                    case 1:
                            Console.WriteLine("Ingrese el primero digito");
                            a = int.Parse(Console.ReadLine());
                            Console.WriteLine("Ingrese el segundo digito");
                            b = int.Parse(Console.ReadLine());
                            int suma;
                            suma= a+b;
                            Console.WriteLine("El resultado de la suma es: "+ suma);
                            break;
                    case 2: 
                            Console.WriteLine("Ingrese el primero digito");
                            a = int.Parse(Console.ReadLine());
                            Console.WriteLine("Ingrese el segundo digito");
                            b = int.Parse(Console.ReadLine());
                            int dividir;
                            dividir= a/b;
                            Console.WriteLine("El resultado de la division es: "+dividir);
                            break;
                    case 3: 
                            Console.WriteLine("Ingrese el primero digito");
                            a = int.Parse(Console.ReadLine());
                            Console.WriteLine("Ingrese el segundo digito");
                            b = int.Parse(Console.ReadLine());
                            int multiplicar;
                            multiplicar= a*b;
                            Console.WriteLine("El resultado de la multiplicacion es: "+multiplicar);
                            break;
                    case 4:
                            Console.WriteLine("Ingrese el primero digito");
                            a = int.Parse(Console.ReadLine());
                            Console.WriteLine("Ingrese el segundo digito");
                            b = int.Parse(Console.ReadLine());
                            int resta;
                            resta= a-b;
                            Console.WriteLine("El resultado de la resta es : "+resta);
                            break;
                        }
         
            Console.ReadLine();//Necesario
        }//main
    }//Class final
}//El final
